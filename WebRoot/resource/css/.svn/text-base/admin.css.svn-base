body, p, ul, li, h1, h2, h3, h4, h5, h6, table, tr, td {font-family: "Microsoft Yahei",Tahoma;font-size: 12px;margin: 0;padding: 0;}
img {border:none;}
a {color:#7eae28;text-decoration: none;}
a:hover {color:#ff6600;}
.header {width:100%; height:80px;}
.content {width:960px; left:50%;margin-left:-480px;position:absolute;}

/*
 * ----------------------------------------------------------------
 * 登录页面
 * ----------------------------------------------------------------
 */
 #banner {background: url("../../resource/images/admin/banner_bg.gif") repeat scroll 0 0 #353535;float: left;height: 360px;min-width: 200px;
	overflow: hidden;position: relative;width: 100%;z-index: 100;}
 #banner .tc_previwe {height: 360px;left: 0;position: absolute;
	width: 50%;z-index: 100;}
#banner .tc_previwe .tc_pic {
	float: right;
	height: 360px;
	width:500px;
	color: #ffffff;
}
#banner .tc_downarea {
	background: url("../../resource/images/admin/right_bg.png") no-repeat scroll 26px 0 transparent;
	height: 360px;
	position: absolute;
	right: 0;
	width: 50%;
	z-index: 10000;
}
#banner .info_right {
	height: 360px;
	position: absolute;
	right: 0;
	width: 50%;
	z-index: 500;
	color:#ffffff;
}
#banner .tc_downarea table.dtable {
	margin: 30px 0 0 210px;
	position: absolute;
	width: 300px;
	color: #ffffff;
}
* html #banner .tc_downarea table.dtable {
	margin: 30px 0 0 -120px;
}
