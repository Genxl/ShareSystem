.comment { font-family:"Courier New";background-color:#f2f3f4; font-size:12px; }
.comment .input { padding:5px 8px 4px 12px; }
.comment .mini_input {width:100%; height:20px; font-size:12px; color:#aaa; overflow:hidden;}
.comment .normal_input {width:100%; font-size:12px; color:#555; overflow:auto;}
.comment .submit_div {font-size:12px; display:none;}
.comment .submit_div button { font-size:12px; height:22px; font-family:"Courier New"; line-height:20px;}
.comment .submit_div a {color:#68a4ea;text-decoration:none;}
.comment .submit_div a:hover {color:#4444ee;}
.comment .comment_face {width:32px; height:32px; border:none;}
.comment .top_comment {padding:1px 1px 1px 15px;}
.comment .top_reply {padding:2px 10px 2px 40px;}
.comment .comment_div { border-bottom:1px solid #ffffff;}
.comment .left_part {float:left; width:6%;}
.comment .right_part {float:left; width:84%;  }
.comment .reply_input {display:none;}
.comment label.error {font-size:12px;}